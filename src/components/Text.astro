---
// Henter parametrene fra Astro.props
const { teksttype = "brødtekst", weight = "regular", font = "body", color = "primary" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  brødtekst: "lg:text-desktop-p text-mobile-p",
};

const stylingClasses = {
  regular: "font-normal",
};

const fontClasses = {
  body: "font-body",
};

const colorClasses = {
  primary: "text-text-primary",
  secondary: "text-text-secondary",
};
---

<p class:list={[sizeClasses[teksttype], stylingClasses[weight], fontClasses[font], colorClasses[color]]}><slot /></p>
