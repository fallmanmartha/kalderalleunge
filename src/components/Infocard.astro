---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
import Button from "./Button.astro";

const { url = "#", cardimage = "", cardimagealt = "", cardtitle = "", cardtext = "", variant = "button" } = Astro.props;
---

<a href={url} class="">
  <div class="relative inline-block mt-20 mr-20">
    <!-- BACKGROUND IMAGE -->
    <div class="absolute -top-10 left-10 w-full h-full z-0">
      <img src={cardimage} alt={cardimagealt} class="w-full h-full object-cover" />
    </div>

    <!-- CONTENT BOX -->
    <div class="relative bg-cards-primary text-text-secondary px-10 py-10 z-10 max-w-2xl lg:min-h-90
                flex flex-col">
      <Heading htmlheading="h3" size="small" font="heading" color="secondary" weight="bold">
        {cardtitle}
      </Heading>

      <div class="mt-6 max-w-xl">
        <Text font="body" color="secondary">
          {cardtext}
        </Text>
      </div>

      {
        variant === "button" && (
          <div class="mt-auto ml-auto pt-10">
            <Button variant="primary" size="large" shadow="noeffect">
              Udforsk
            </Button>
          </div>
        )
      }
    </div>
  </div>
</a>
