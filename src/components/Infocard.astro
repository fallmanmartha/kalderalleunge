---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
import Button from "./Button.astro";

const { url = "#", cardimage = "", cardimagealt = "", cardtitle = "", cardsubtitle = "", cardtext = "", variant = "button" } = Astro.props;
---

<a href={url} class="">
  <div class="relative inline-block mt-grid-gap-desktop mr-grid-gap-desktop">
    <!-- BACKGROUND IMAGE -->
    <div class="absolute -top-card-image-offset left-card-image-offset w-full h-full z-0">
      <img src={cardimage} alt={cardimagealt} class="w-full h-full object-cover" />
    </div>

    <!-- CONTENT BOX -->
    <div class="relative bg-cards-primary text-text-secondary p-card z-10 lg:min-h-90
                flex flex-col">
      <div>
        <div class="relative bg-cards-primary text-text-secondary z-10 max-w-2xl lg:min-h-90
                flex flex-col">
          <!-- Overskrift H3 - cardtitle -->
          <Heading htmlheading="h3" size="medium" font="heading" color="secondary" weight="medium">
            {cardtitle}
          </Heading>

          <!-- Overskrift H4 - cardsubtitle -->
          <div class="mt-5">
            <Heading htmlheading="h4" size="small" font="heading" color="secondary" weight="medium">
              {cardsubtitle}
            </Heading>
          </div>

          <!-- Brødtekst - cardtext -->
          <div class="mt-6">
            <Text font="body" color="secondary">
              {cardtext}
            </Text>
          </div>

          <!-- Knap (valgfri) -->
          {
            variant === "button" && (
              <div class="mt-auto ml-auto pt-10">
                <Button variant="primary" size="large" shadow="noeffect">
                  Udforsk
                </Button>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div></a
>
