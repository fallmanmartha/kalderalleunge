---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
import Button from "./Button.astro";

const { url = "#", cardimage = "", cardimagealt = "", cardtitle = "", cardtext = "" } = Astro.props;
// Jag använder `cardtid` som brødtekst/description här – byt navn hvis du vil.
---

<a href={url} class="">
  <div class="relative inline-block mt-10">
    <div class="absolute -top-10 left-10 w-full h-full z-0">
      <img src={cardimage} alt={cardimagealt} class="w-full h-full object-cover" />
    </div>

    <div class="relative bg-cards-primary text-text-secondary px-10 py-10 z-10 max-w-2xl">
      <Heading htmlheading="h3" size="small" font="heading" color="secondary" weight="bold">
        {cardtitle}
      </Heading>

      <div class="mt-6 max-w-md">
        <Text font="body" color="secondary">
          {cardtext}
        </Text>
      </div>

      <div class="mt-10 flex justify-end">
        <a href={url}>
          <Button variant="primary" size="large" shadow="noeffect"> Udforsk </Button>
        </a>
      </div>
    </div>
  </div>
</a>
