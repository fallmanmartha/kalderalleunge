---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
import Button from "./Button.astro";
---

<header x-data="{ showmenu: false }" class="fixed top-0 left-0 w-full z-50">
  <!-- TOP BAR -->
  <div id="navbar" class="py-3 px-margin-mobile flex justify-between items-center bg-hero-primary">
    <!-- BURGER / KRYSS -->
    <button id="burgermenu" class="pr-30 animate-fade-down animate-once transform transition-transform duration-200 hover:scale-110 cursor-pointer" x-on:click="showmenu = !showmenu" aria-label="Åbn menu">
      <!-- BURGER -->
      <svg x-show="!showmenu" x-cloak xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="size-15">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>

      <!-- KRYSS -->
      <svg x-show="showmenu" x-cloak xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="size-15">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- LOGO -->
    <div id="logo" class="lg:w-25 lg:h-25 w-15 h-15 animate-fade-down animate-once">
      <a href="/">
        <img src="/logo.svg" alt="Kalder Alle Unge logo" class="hover:animate-jump hover:animate-once" />
      </a>
    </div>

    <!-- DESKTOP CTA -->
    <div class="hidden lg:block animate-fade-down animate-once">
      <a href="/ambassador">
        <Button variant="tertiary" size="small">Bliv ambassadør</Button>
      </a>
    </div>
  </div>

  <!-- MOBILMENU -->
  <nav
    id="mobilmenu"
    class="bg-hero-primary flex flex-col px-margin-mobile pt-10 pb-section-padding font-quote lg:text-4xl text-3xl fixed w-full overflow-hidden"
    x-show="showmenu"
    x-cloak
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="text-text-secondary">
      <li class="pb-p-mobile lg:pb-p-desktop hover:text-text-quaternary italic font-black">
        <a href="/ambassador/">BLIV AMBASSADØR</a>
      </li>

      <li class="pb-p-mobile lg:pb-p-desktop hover:text-text-quaternary italic font-black">
        <a href="/">EVENTS</a>
      </li>

      <li class="pb-p-mobile lg:pb-p-desktop hover:text-text-quaternary italic font-black">
        <a href="/">VÆRKTØJER</a>
      </li>

      <li class="pb-p-mobile lg:pb-p-desktop hover:text-text-quaternary italic font-black">
        <a href="/ligestilling/">VIDEN OM LIGESTILLING</a>
      </li>

      <li class="pb-p-mobile lg:pb-p-desktop hover:text-text-quaternary italic font-black">
        <a href="/">OM OS</a>
      </li>

      <li class="pt-h2-mobile lg:pt-h2-desktop hover:text-text-tertiary font-heading font-bold">
        <a href="https://www.danskkvindesamfund.dk/" target="_blank" rel="noopener noreferrer">
          Dansk <br />Kvindesamfund
        </a>
      </li>
    </ul>
  </nav>
</header>
