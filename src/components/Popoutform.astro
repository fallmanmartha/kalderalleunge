---
import Heading from "../components/Heading.astro";
---

<!-- FIXED SIDE-BUTTONS + POP OUT FORM -->
<div x-data="{ open: false, step: 1, showThanks: false }">
  <!-- pop out knap: Tilmeld dig (synes kun når lukket)-->
  <button
    type="button"
    class="fixed top-65 right-0 z-50 bg-button-tertiary-default text-text-button-primary px-6 py-3 uppercase rounded-tr-2xl rounded-br-2xl
           [writing-mode:vertical-rl] rotate-180"
    x-on:click="open = true; step = 1; showThanks = false"
  >
    Tilmeld dig
  </button>

  <!--  Luk formular knap (synes kun når open) -->
  <button
    type="button"
    class="fixed top-65 right-130 z-100 bg-button-tertiary-default text-text-button-primary px-6 py-3 uppercase rounded-tr-2xl rounded-br-2xl
           [writing-mode:vertical-rl] rotate-180"
    x-show="open"
    x-cloak
    x-on:click="open = false; showThanks = false; step = 1"
  >
    Luk formular
  </button>

  <!-- OVERLAY -->
  <div class="fixed inset-0 z-40 bg-black/60" x-show="open" x-cloak x-transition.opacity x-on:click="open = false; showThanks = false; step = 1"></div>

  <!-- POP OUT FORM -->
  <aside
    class="fixed top-0 right-0 z-50 h-full w-full max-w-xl"
    x-show="open"
    x-cloak
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="translate-x-full"
    x-transition:leave="transition ease-in duration-100"
    x-transition:leave-end="translate-x-full"
    x-on:keydown.escape.window="open = false; showThanks = false; step = 1"
  >
    <!--form-container -->
    <div class="h-full overflow-y-auto ml-margin-mobile">
      <div>
        <section class="relative z-10 bg-cards-tertiary pt-20 px-15">
          <!-- Overskrift -->
          <div class="mb-h2-mobile lg:mb-h2-desktop">
            <Heading htmlheading="h3" size="medium" font="heading" color="primary" weight="bold">BLIV AMBASSADØR</Heading>
          </div>

          <div class="grid grid-cols-1 gap-grid-gap-mobile">
            <!-- Form -->
            <div>
              <form x-on:submit.prevent="showThanks = true">
                <!-- side 1 -->
                <div x-show="step === 1" x-cloak>
                  <div class="mb-h3-mobile lg:mb-h3-desktop">
                    <Heading htmlheading="h3" size="medium" color="primary" font="heading" weight="medium"> De praktiske informationer </Heading>
                  </div>

                  <div class="mb-p-mobile lg:mb-p-desktop">
                    <label class="block text-text-primary text-xl mb-p-mobile lg:mb-p-desktop"> *Navn </label>

                    <div>
                      <div class="space-y-p-mobile lg:space-y-p-desktop">
                        <label class="text-text-primary">Fornavn</label>
                        <input type="text" name="fornavn" placeholder="Fornavn" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                      </div>

                      <div>
                        <label class="text-text-primary">Efternavn</label>
                        <input type="text" name="efternavn" placeholder="Efternavn" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                      </div>
                    </div>
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl">*Email</label>
                    <input type="email" name="email" placeholder="email@example.com" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl">*Telefon</label>
                    <input type="tel" name="telefon" placeholder="+45 00 00 00 00" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>
                </div>

                <!-- side 2 -->
                <div x-show="step === 2" x-cloak>
                  <div class="mb-h3-mobile lg:mb-h3-desktop">
                    <Heading htmlheading="h3" size="medium" color="primary" font="heading" weight="medium"> Lidt om dig </Heading>
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl">*Alder</label>
                    <input type="number" name="alder" placeholder="25" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl">Køn</label>
                    <input type="text" name="koen" placeholder="Kønsidentitet" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl">*By</label>
                    <input type="text" name="by" placeholder="København" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>
                </div>

                <!-- side 3 -->
                <div x-show="step === 3" x-cloak>
                  <div class="mb-h3-mobile lg:mb-h3-desktop">
                    <Heading htmlheading="h3" size="medium" color="primary" font="heading" weight="medium"> Lad os lære dig at kende </Heading>
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl"> Hvad laver du til daglig? </label>
                    <input type="text" name="hvad_laver_du" placeholder="Jeg studerer og arbejder…" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="text-text-primary text-xl"> Hvorfor ønsker du at blive ambassadør? </label>
                    <input type="text" name="hvorfor" placeholder="Jeg vil gerne engagere flere unge…" class="w-full bg-body-primary text-text-primary p-input outline-none placeholder:text-text-placeholder focus:ring-focus-primary" />
                  </div>

                  <div class="lg:mb-p-desktop mb-p-mobile">
                    <label class="block text-text-primary text-xl"> Samtykke </label>
                    <label class="flex items-start gap-grid-gap-small text-text-primary text-sm">
                      <input type="checkbox" name="samtykke" class="mt-1 rounded-full w-8 h-8 border-2 border-button-secondary-default focus:ring-focus-primary" />
                      <span>
                        Jeg giver hermed samtykke til at Dansk Kvindesamfund/KALDER ALLE UNGE må tage kontakt til mig ifm Dansk Kvindesamfund/KALDER ALLE UNGE aktiviteter. Jeg giver derudover samtykke til at Dansk Kvindesamfund/KALDER ALLE UNGE må
                        opbevare mine kontaktinformationer.
                      </span>
                    </label>
                  </div>
                </div>

                <!-- Knapper -->
                <div class="mt-section-mobile flex items-center justify-between">
                  <div class="flex gap-grid-gap-small">
                    <span class="w-4 h-4 rounded-full" :class="step === 1 ? 'bg-black' : 'bg-white'"></span>
                    <span class="w-4 h-4 rounded-full" :class="step === 2 ? 'bg-black' : 'bg-white'"></span>
                    <span class="w-4 h-4 rounded-full" :class="step === 3 ? 'bg-black' : 'bg-white'"></span>
                  </div>

                  <div class="flex gap-grid-gap-small">
                    <button type="button" x-show="step > 1" x-on:click="step--" class="px-6 py-3 rounded-full border-2 border-text-primary text-text-primary"> Tilbage </button>

                    <button type="button" x-show="step < 3" x-on:click="step++" class="px-6 py-3 rounded-full bg-button-primary-default text-text-button-primary"> Næste </button>

                    <button type="submit" x-show="step === 3" class="px-6 py-3 rounded-full bg-button-primary-default text-text-button-primary"> Send </button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Tail svg -->
          <div class="relative top-25 left-79">
            <img src="tailright.svg" alt="" />
          </div>
        </section>
      </div>
    </div>
  </aside>

  <!-- Takke boks -->
  <div x-show="showThanks" x-cloak class="fixed inset-0 bg-black/60 flex items-center justify-center z-[60]">
    <div class="bg-cards-tertiary text-text-primary p-8 md:p-10 max-w-2xl mx-4">
      <h2 class="text-2xl font-semibold mb-4">Tak for din tilmelding!</h2>
      <p class="mb-6">Vi kontakter dig snart på den email, du har angivet.</p>

      <button class="px-8 py-3 rounded-full bg-button-primary-default text-text-button-primary" x-on:click="showThanks = false; open = false; step = 1"> Luk </button>
    </div>
  </div>
</div>
