---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
---

<!-- INSTAGRAM -->
<section class="bg-body-tertiary lg:mt-section-desktop mt-section-mobile overflow-hidden lg:-mb-25 -mb-15 relative z-0">
  <div class="lg:mx-margin-desktop mx-margin-mobile py-section-padding">
    <!-- Overskrifter -->
    <div class="lg:mb-h2-desktop mb-h2-mobile uppercase intersect:animate-flip-down animate-once">
      <Heading htmlheading="h2" size="large" font="heading" color="primary" weight="bold"> Følg os på Instagram </Heading>
    </div>
    <div class="intersect:animate-fade-up animate-once">
      <Text teksttype="brødttekst" class="text-center">
        Følg os
        <a href="https://www.instagram.com/kalderalleunge/" target="_blank" rel="noopener noreferrer" class="font-bold text-current no-underline"> @kalderalleunge </a>, og vær med til at styrke unges stemme i ligestillingsdebatten.
      </Text>
    </div>
  </div>

  <!-- image row -->
  <div class="flex flex-nowrap w-full">
    <img src="/instagram1.webp" alt="Instagram billede 1" class="block w-1/5 h-56 md:h-72 object-cover rotate-4 hover:animate-jump animate-once" />

    <img src="/instagram2.webp" alt="Instagram billede 2" class="block w-1/5 h-56 md:h-72 object-cover -rotate-3 hover:animate-jump animate-once" />

    <img src="/instagram3.webp" alt="Instagram billede 3" class="block w-1/5 h-56 md:h-72 object-cover rotate-1 hover:animate-jump animate-once" />

    <img src="/instagram4.webp" alt="Instagram billede 4" class="block w-1/5 h-56 md:h-72 object-cover -rotate-8 hover:animate-jump animate-once" />

    <img src="/instagram5.webp" alt="Instagram billede 5" class="block w-1/5 h-56 md:h-72 object-cover rotate-9 hover:animate-jump animate-once" />
  </div>
</section>
<!-- SLUT PÅ INSTAGRAM -->
